{
  "name": "bottle-monitor",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "description": "A frontend monitor project",
  "author": "Bottle414",
  "license": "ISC",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postinstall": "simple-git-hooks",
    "demo": "pnpm --filter demo run dev",
    "server": "pnpm --filter server run dev",
    "docs": "pnpm --filter docs run dev",
    "build:demo": "pnpm --filter demo run build",
    "build:docs": "pnpm --filter docs run build",
    "build:sdk": "pnpm --filter core run build"
  },
  "dependencies": {
    "ua-parser-js": "^2.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "chalk": "^5.6.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  }
}
