{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {},
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
