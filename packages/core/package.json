{
  "name": "@bottle-monitor/core",
  "type": "module",
  "version": "1.0.0",
  "description": "Core package for Bottle Monitor SDK",
  "author": "Bottle414",
  "license": "ISC",
  "keywords": ["monitoring", "core", "frontend", "sdk"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bottle-copy-sw": "./scripts/copy-sw.js"
